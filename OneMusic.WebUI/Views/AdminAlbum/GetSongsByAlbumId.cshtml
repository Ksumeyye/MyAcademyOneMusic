@model OneMusic.WebUI.Controllers.AlbumsByArtistViewModel
@{
    ViewData["Title"] = "GetSongsByAlbumId";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Şarkı Kapak Resmi</th>
            <th>Şarkı İsmi</th>
            <th>Şarkı</th>
        </tr>
    </thead>
    <tbody>
        @for (int i=0; i<Model.Songs.Count; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>
                    <img src="@Url.Content("~/images/"+ Model.Songs[i].SongImageUrl)"alt="Şarkı Resmi" style="height:50px; width:50px"/>
                </td>
                <td>@Html.DisplayFor(model=>Model.Songs[i].SongName)</td>
                <td>
                    <audio preload="auto" controls>
                        <source src="@Url.Content("~/songs/"+Model.Songs[i].SongUrl)"type="audio/mpeg">
                    </audio>
                </td>
            </tr>
        }
    </tbody>
</table>

